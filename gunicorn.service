[Unit]
Description=Gunicorn daemon for Django Project
Before=nginx.service
After=network.target

[Service]
WorkingDirectory=/home/django/deploy/app
ExecStart=/usr/bin/gunicorn3 --name=app --pythonpath=/home/django/deploy/app --bind unix:/home/django/gunicorn.socket --config /etc/gunicorn.d/gunicorn.py app.wsgi:application
Restart=always
SyslogIdentifier=gunicorn
User=django
Group=django


[Install]
WantedBy=multi-user.target
